@model LapTop.Models.Hoadon

@{
    ViewData["Title"] = "Edit";
}

<div style="margin:5px;" class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="HoaDon" asp-action="Index">Quay về danh sách</a>
            <span class="breadcrumb-item active"> Thêm hóa đơn</span>
        </nav>
    </div>
</div>
<div style="margin:5px;" class="row">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Thêm hóa đơn</h4>
        </div>
        <div class="card-content">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-3">
                        <label>Tên khách hàng</label>
                    </div>
                    <div class="col-md-8 form-group">
                        @Html.DropDownList("IdkhachHang", null, "-- Chọn --", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdkhachHang, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        <label>Nhân viên</label>
                    </div>
                    <div class="col-md-8 form-group">
                        @Html.DropDownList("IdnhanVien", null, "-- Chọn --", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdnhanVien, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        <label>Tình trạng</label>
                    </div>
                    <div class="col-md-8 form-group">
                        @Html.DropDownList("IdtinhTrang", null, "-- Chọn --", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdtinhTrang, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        <label>Ngày lập</label>
                    </div>
                    <div class="col-md-8 form-group">
                        <input asp-for="NgayLap" class="form-control" placeholder="Ngày lập" />
                    </div>
                    <div class="col-md-3">
                        <label>Tổng giá</label>
                    </div>
                    <div class="col-md-8 form-group">
                        <input asp-for="TongGia" class="form-control" placeholder="Tổng giá" />
                    </div>
                    <div class="col-md-3">
                        <label>Địa chỉ nhận hàng</label>
                    </div>
                    <div class="col-md-8 form-group">
                        <input asp-for="NoiNhan" class="form-control" placeholder="Địa chỉ nhận hàng" />
                    </div>
                    <div class="col-md-3">
                        <label>Số điện thoại</label>
                    </div>
                    <div class="col-md-8 form-group">
                        <input asp-for="SoDienThoai" class="form-control" placeholder="Số điện thoại" />
                    </div>
                    <div class="col-md-3">
                        <label>Ghi chú</label>
                    </div>
                    <div class="col-md-8 form-group">
                        <input asp-for="GhiChu" class="form-control" placeholder="Ghi chú" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Cập nhật" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
