@model IEnumerable<LapTop.Models.Sanpham>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenSanPham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnhSanPham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaBan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaKhuyenMai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayBatDauKhuyenMai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayKetThucKhuyenMai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSanPham)
            </td>
            <td>
                <img src="~/Images/@Html.DisplayFor(modelItem=> item.AnhSanPham)" width="60" height="60" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaKhuyenMai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayBatDauKhuyenMai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKetThucKhuyenMai)
            </td>
            <td>
                @if (item.SoLuong.Value > 0)
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-success badge-dot m-r-10"></div>
                        <div style="color:green; font-family:'Agency FB'; font-size:15px;font-weight:bold">Còn hàng</div>
                    </div> }
                else
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-danger badge-dot m-r-10"></div>
                        <div style="color:red; font-family:'Agency FB'; font-size:15px;font-weight:bold">Hết hàng</div>
                    </div>}

            </td>
           
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
