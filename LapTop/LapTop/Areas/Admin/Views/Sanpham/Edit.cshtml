                <label asp-for="AnhSanPham" class="control-label"></label>
                <input type="file" name="file" multiple accept="image/jpg , image/jpeg, image/png" />
                <span asp-validation-for="AnhSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaBan" class="control-label"></label>
                <input asp-for="GiaBan" class="form-control" />
                <span asp-validation-for="GiaBan" class="text-danger"></span>
            </div>
