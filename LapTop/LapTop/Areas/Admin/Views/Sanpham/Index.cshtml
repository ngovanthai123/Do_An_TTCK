@model IEnumerable<LapTop.Models.Sanpham>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a style="margin:5px;" class="btn btn-primary btn-tone m-r-5" asp-action="Create">Create New</a>
</p>
<div style="margin:5px;" class="card mt-1">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        <table class="table table-bordered table-hover table-sm mb-0">

            <tr class="text-center">
                <th width="5%">#</th>
                <th scope="col">Tên Sản Phẩm </th>
                <th scope="col">Ảnh Sản Phẩm </th>
                <th scope="col">Giá bán </th>
                <th scope="col">Giá khuyến mãi </th>
                <th scope="col">Số Lượng </th>
                @* <th scope="col">Mô tả </th>*@
                <th scope="col">Bảo Hành </th>
                <th scope="col">Dòng Sản Phẩm </th>
                <th scope="col">Nơi Sản Xuất </th>
                <th width="5%">Sửa</th>
                <th width="5%">Chi tiết</th>
                <th width="5%">Xóa</th>
            </tr>

            @{ int stt = 1; }
            @foreach (var item in Model)
            {
        <tr class="text-center">
            <td>@stt</td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSanPham)
            </td>
            <td>
                <img src="~/Images/@Html.DisplayFor(modelItem=> item.AnhSanPham)" width="70" height="70" class="img-thumbnail" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaKhuyenMai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.BaoHanh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IddongSanPhamNavigation.TenSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdnoiSanXuatNavigation.TenNoiSanXuat)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/images/wrench.jpg" /></a>
            </td>
            <td class="text-center">
                <a asp-action="Details" asp-route-id="@item.Id"><img src="~/images/list.jpg" /></a>
            </td>
            <td class="text-center">
                <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/delete.jpg" /></a>
            </td>
        </tr>
                stt++;
            }

        </table>
    </div>
</div>
